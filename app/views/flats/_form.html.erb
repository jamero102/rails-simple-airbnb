<div class="flat-form">

  <%= simple_form_for(@flat) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night, :input_html => { type: "number" } %>
      <%= f.input :number_of_guests, :input_html => { type: "number" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary"%>
      <%= link_to 'Back', flats_path, class: "btn btn-danger" %>
    </div>


  <% end %>
</div>
