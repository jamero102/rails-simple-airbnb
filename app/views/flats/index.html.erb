<div class="container mt-3">
  <h1 class="mx-2">All our Flats</h1>
  <p class="px-2"><%= @search_msg %></p>
<d class="row d-flex justify-content-between p-3">
  <% @flats.each do |flat| %>
  <div class="col-3 card mx-2 overflow-auto d-flex flex-column justify-content-around mb-3 bg-white" style="height: 400px;">
    <div class="bg-light">
      <div class="">
        <img src="<%= flat.image %>" alt="pic" class="img-fluid" >
        <h3 class="my-3" style="font-size: 18px"><%= flat.name %></h3>
        <p><%= flat.address %></p>
      </div>
      <div class="d-flex justify-content-between my-2">
        <p><i class="fas fa-users"></i> <%= flat.number_of_guests %></p>
        <p><i class="fas fa-pound-sign"> </i><%= flat.price_per_night %></p>
      </div>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <%= link_to "More info", flat_path(flat), class: "text-primary" %>
      <%= link_to "Edit", edit_flat_path(flat), class: "text-warning" %>
      <%= link_to "Remove", flat, class: "text-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <% end %>
  </d>
</div>
